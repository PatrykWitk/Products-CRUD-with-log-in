@page
@model PS6.Pages.EditCategoryModel
@{

    string idOfCategory = HttpContext.Request.Query["id"];

}


<h2>Edycja kategorii</h2>
<br />
<br />

<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-6">
                <input asp-for="EditCategory.id" hidden class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EditCategory.shortName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="EditCategory.shortName" class="form-control">
                <span asp-validation-for="EditCategory.shortName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EditCategory.longName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="EditCategory.longName" class="form-control">
                <span asp-validation-for="EditCategory.longName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>