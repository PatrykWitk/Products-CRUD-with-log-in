@page
@model PS6.Pages.Admin.EditModel
@{

    string idOfProduct = HttpContext.Request.Query["id"];

}


<h2>Edycja produktu</h2>
<br />
<br />

<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-6">
                <input asp-for="EditProduct.id" hidden class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EditProduct.name" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="EditProduct.name" class="form-control">
                <span asp-validation-for="EditProduct.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EditProduct.price" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="EditProduct.price" class="form-control">
                <span asp-validation-for="EditProduct.price" class="text-danger"></span>
            </div>
        </div>
        <div>
            <select asp-for="EditProduct.categoryId">
                @foreach (var p in Model.categoryList)
                {
                    <option value="@p.id">@Html.DisplayFor(m => p.shortName)</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>