@page
@model PS6.Pages.AddModel
@{

}
<h2>Dane produktu:</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="NewProduct.name" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="NewProduct.name" class="form-control">
                <span asp-validation-for="NewProduct.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewProduct.price" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="NewProduct.price" class="form-control">
                <span asp-validation-for="NewProduct.price" class="text-danger"></span>
            </div>
        </div>
        <div>
            <select asp-for="NewProduct.categoryId">
                @foreach (var p in Model.categoryList)
                {
                    <option value="@p.id">@Html.DisplayFor(m => p.shortName)</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
